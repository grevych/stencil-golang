{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update tool versions in .mise.toml.tpl",
      "fileMatch": ["templates/.mise.toml.tpl"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s- [a-z]+: \"(?<currentValue>.+?)\"\\s"
      ]
    }
  ]
}
